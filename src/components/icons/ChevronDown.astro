---
interface Props {
  size?: string;
  className?: string;
  strokeWidth?: string;
}

const { className, size, strokeWidth } = Astro.props;

const finalSize = size || "24";
const finalStrokeWidth = strokeWidth || "2";
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width=`${finalSize}`
  height=`${finalSize}`
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={finalStrokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}><path d="m6 9 6 6 6-6"></path></svg
>
