---
import Link from "./Link.astro";
---

<header class="flex w-full justify-center px-2 pt-2">
  <div
    class="flex h-12 w-full items-center justify-between rounded-full border border-surface px-2 backdrop-blur-lg bg-surface-opaque container"
  >
    <nav
      class="flex w-full items-center justify-between px-4"
      aria-label="Global"
    >
      <div class="flex flex-1">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Axflow</span>
          <img src="/logo.png" alt="Axflow logo" width={88} height={16} />
        </a>
      </div>

      <div class="flex flex-1 justify-end gap-3 sm:gap-6 items-center">
        <Link
          class="text-zinc-300 text-sm font-medium hover:text-zinc-200"
          href="/blog"
        >
          Blog
        </Link>
        <Link
          class="text-zinc-300 text-sm font-medium hover:text-zinc-200 px-4"
          href="https://studio.axflow.dev"
        >
          Studio
        </Link>
        <div class="flex items-center">
          <a
            href="https://github.com/axflow/axflow"
            class="hover:bg-button py-0 px-0 sm:py-2 sm:px-4 rounded-full"
          >
            <img
              src="/github-mark-white.png"
              alt="GitHub logo"
              width={18}
              height={18}
            />
          </a>
          <a
            class="hidden sm:inline-block hover:bg-button py-2 px-4 rounded-full"
            href="https://join.slack.com/t/axilladevelopers/shared_invite/zt-20j9zofkl-gA3EO3O4N1t8~PJTvv7TQg"
          >
            <img
              src="/slack-white.png"
              alt="Slack logo"
              width={18}
              height={18}
            />
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
