---
import Link from "./Link.astro";
---

<header
  class="sticky z-10 flex h-12 items-center border-b border-zinc-800/80 bg-zinc-1000/20 backdrop-blur-lg"
>
  <div class="container mx-auto">
    <nav
      class="flex w-full items-center justify-between px-6 sm:px-20"
      aria-label="Global"
    >
      <div class="flex flex-1">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Axflow</span>
          <img src="/logo.png" alt="Axflow logo" width={88} height={16} />
        </a>
      </div>

      <div class="flex flex-1 justify-end gap-6 items-center">
        <Link class="text-zinc-300 hover:text-zinc-200" href="/blog">Blog</Link>
        <Link
          class="text-zinc-300 hover:text-zinc-200 px-4"
          href="https://studio.axflow.dev"
        >
          Studio
        </Link>
        <a href="https://github.com/axflow/axflow">
          <img
            src="/github-mark-white.png"
            alt="GitHub logo"
            width={18}
            height={18}
          />
        </a>
        <a
          href="https://join.slack.com/t/axilladevelopers/shared_invite/zt-20j9zofkl-gA3EO3O4N1t8~PJTvv7TQg"
        >
          <img src="/slack-white.png" alt="Slack logo" width={18} height={18} />
        </a>
      </div>
    </nav>
  </div>
</header>
